{
  "name": "express-typescript-study",
  "version": "1.0.0",
  "description": "Express + TypeScript学習用プロジェクト",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx src/db/seed.ts",
    "docs:lint": "redocly lint main@v2",
    "docs:build": "redocly build-docs main@v2 --output docs/redoc-static.html",
    "docs:serve": "npm run docs:build && npx http-server docs -p 8080 -o redoc-static.html",
    "docs:bundle": "redocly bundle main@v2 --output docs/openapi-bundle.yaml"
  },
  "keywords": [
    "express",
    "typescript",
    "openapi",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "type": "module",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@prisma/client": "^6.13.0",
    "@redocly/cli": "^2.0.3",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.2.1",
    "express-openapi-validator": "^5.5.8",
    "http-server": "^14.1.1",
    "prisma": "^6.13.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "volta": {
    "node": "22.12.0",
    "npm": "11.5.2"
  }
}
